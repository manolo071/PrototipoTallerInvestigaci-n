<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1BEE7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control de Agua"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etFlujo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Flujo (L/s)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperatura (Â°C)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etPH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pH"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etCloro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cloro (ppm)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etORP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ORP (mV)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etTDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TDS (ppm)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etTurbidez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Turbidez (NTU)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />

    </LinearLayout>
</ScrollView>

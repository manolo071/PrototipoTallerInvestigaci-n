<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E1BEE7">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sistema Monitoreo de Control de Agua"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="178dp"
        android:layout_height="497dp"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="121dp"
            android:layout_height="89dp"
            app:srcCompat="@drawable/control" />

        <Button
            android:id="@+id/btn_Control"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Control" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="121dp"
            android:layout_height="133dp"
            app:srcCompat="@drawable/alertas" />

        <Button
            android:id="@+id/btn_Alertas"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Alertas" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="178dp"
        android:layout_height="498dp"
        android:layout_below="@id/title"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="65dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="98dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/reportes" />

        <Button
            android:id="@+id/btn_Reportes"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Reportes" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="116dp"
            android:layout_height="128dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/chat_bot" />

        <Button
            android:id="@+id/btn_ChatBot"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="ChatBot" />
    </LinearLayout>

</RelativeLayout>
